<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sns.fragment.mypage.MypageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mypage_main_toolbar"
            app:contentInsetStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="마이페이지"
                    android:textColor="@color/black"
                    android:fontFamily="@font/noto_sans_bold"
                    android:includeFontPadding="false"
                    android:textSize="15dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/mypage_main_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/mypage_main_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/mypage_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장석연"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="@id/mypage_main_profile"
            app:layout_constraintLeft_toLeftOf="@id/mypage_profile_school"
            app:layout_constraintBottom_toTopOf="@id/mypage_profile_school"/>

        <TextView
            android:id="@+id/mypage_profile_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대덕소프트웨어마이스터고등학교"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@id/mypage_main_profile"
            app:layout_constraintTop_toBottomOf="@id/mypage_profile_name"
            app:layout_constraintBottom_toTopOf="@id/mypage_profile_class"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/mypage_profile_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1학년 3반"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="@color/black"
            android:textSize="9dp"
            app:layout_constraintLeft_toLeftOf="@id/mypage_profile_school"
            app:layout_constraintTop_toBottomOf="@id/mypage_profile_school"
            app:layout_constraintBottom_toBottomOf="@id/mypage_main_profile"/>

        <TextView
            android:id="@+id/mypage_badge"
            android:layout_width="27dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="@id/mypage_profile_name"
            app:layout_constraintBottom_toBottomOf="@id/mypage_profile_name"
            app:layout_constraintLeft_toRightOf="@id/mypage_profile_name"
            android:layout_marginLeft="10dp"
            android:background="@drawable/email_add_btn"
            android:textSize="8dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="@color/white"
            android:text="학생"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/mypage_profile_class"
            android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>