<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sns.fragment.mainpage.MainPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar_main_page"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/toolbar_background"
            android:elevation="10dp"
            android:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="SMUP"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="18dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </Toolbar>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_left_to_parent_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_right_to_parent_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar_main_page"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="2021.12.20"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans_bold"
            android:textColor="#9C9C9C" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/main_left_to_parent_line"
            app:layout_constraintRight_toRightOf="@id/main_right_to_parent_line"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            android:background="@drawable/schedule_background">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="시간표 및 일정"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans_bold"
                android:includeFontPadding="false"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                app:layout_constraintLeft_toLeftOf="@id/tv_time"
                android:text="시간표와 일정을 확인해주세요"
                android:textSize="10dp"
                android:textColor="#80FFFFFF"
                android:fontFamily="@font/noto_sans_bold"
                android:includeFontPadding="false" />

            <Button
                android:id="@+id/circle_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/circle_button"
                app:layout_constraintLeft_toLeftOf="@id/tv_time"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/circle_button"
                app:layout_constraintBottom_toBottomOf="@id/circle_button"
                app:layout_constraintLeft_toRightOf="@id/circle_button"
                android:text="보러가기"
                android:textSize="10dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans_bold"
                android:layout_marginLeft="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>