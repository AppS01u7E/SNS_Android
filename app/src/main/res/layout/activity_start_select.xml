<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sns.login.ui.StartSelectActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_half_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/start_background"/>

    <ImageView
        android:id="@+id/img_woman"
        android:layout_width="219dp"
        android:layout_height="160dp"
        android:src="@drawable/woman"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Welcome!!"
        android:textSize="18dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_bold"
        app:layout_constraintTop_toBottomOf="@id/img_woman"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_user"/>

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="회원이신가요?"
        android:textSize="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_regular"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/start_half_line"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintBottom_toTopOf="@id/tv_not_user"/>

    <TextView
        android:id="@+id/tv_not_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="회원이 아니신가요?"
        android:textSize="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/start_half_line"
        app:layout_constraintBottom_toTopOf="@id/tv_teacher"/>

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="선생님이신가요?"
        android:textSize="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_not_user"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/start_half_line"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:text="로그인 하러가기"
        android:textSize="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_regular"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/start_half_line"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintBottom_toTopOf="@id/tv_not_user"/>

    <TextView
        android:id="@+id/tv_go_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:text="회원가입 하러가기"
        android:textSize="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/start_half_line"
        app:layout_constraintBottom_toTopOf="@id/tv_teacher"/>

    <TextView
        android:id="@+id/tv_teacher_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:text="확인"
        android:textSize="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_not_user"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/start_half_line"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>