<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sns.View.Splash.SignUpDoneActivity">

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_circle_24"/>

    <ImageView
        android:id="@+id/check_anim"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avd_done"
        app:layout_constraintTop_toTopOf="@id/img_circle"
        app:layout_constraintBottom_toBottomOf="@id/img_circle"
        app:layout_constraintLeft_toLeftOf="@id/img_circle"
        app:layout_constraintRight_toRightOf="@id/img_circle"/>

</androidx.constraintlayout.widget.ConstraintLayout>