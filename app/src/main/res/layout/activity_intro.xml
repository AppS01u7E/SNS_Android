<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sns.View.Splash.IntroActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/first_s"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/first_s"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/first_stick"
            app:layout_constraintBottom_toBottomOf="@id/first_stick"/>

        <View
            android:id="@+id/first_stick"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:background="@color/tv_purple"
            app:layout_constraintLeft_toRightOf="@id/first_s"
            app:layout_constraintRight_toLeftOf="@id/last_stick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/first_stick_1"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:background="@color/tv_purple"
            app:layout_constraintLeft_toRightOf="@id/first_s"
            app:layout_constraintRight_toLeftOf="@id/last_stick"
            app:layout_constraintBottom_toBottomOf="@id/first_stick"/>

        <View
            android:id="@+id/last_stick"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:background="@color/tv_purple"
            app:layout_constraintLeft_toRightOf="@id/first_stick"
            app:layout_constraintRight_toLeftOf="@id/last_s"
            app:layout_constraintBottom_toBottomOf="@id/first_stick"/>

        <View
            android:id="@+id/last_stick_1"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:background="@color/tv_purple"
            app:layout_constraintLeft_toRightOf="@id/first_stick"
            app:layout_constraintRight_toLeftOf="@id/last_s"
            app:layout_constraintBottom_toBottomOf="@id/first_stick"/>

        <ImageView
            android:id="@+id/last_s"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:src="@drawable/first_s"
            app:layout_constraintBottom_toBottomOf="@id/last_stick"
            app:layout_constraintLeft_toRightOf="@id/last_stick"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>